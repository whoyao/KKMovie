/* pages/comment-list/comment-list.wxss */
.main-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items:center;
}


.comment-card {
  height: 25%;
  width: 100%;
  padding-left: 10%;
  padding-right: 10%;
  margin-bottom: 1%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
  overflow-y: hidden;
}

.comment-text-wrapper {
  height: 100%;
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.user-wrapper {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  align-content: center;
  justify-content: flex-start;
}

.userhead {
  flex-shrink: 0;
  height: 75rpx;
  width: 75rpx;
  background: #F5E069;
  border-radius: 50%;
}

.username {
  color: rgb(0, 71, 112);
  margin-top:22rpx;
  font-size: 30rpx;
  flex-shrink: 0;
  margin-left: 35rpx;
  opacity: 0.8;
}

.comment-text {
  font-size: 25rpx;
  opacity: 0.8;
  margin-top: 20rpx;
  text-align: left;
  width: 85%;
  height: 40%;
  overflow-x: hidden;
  overflow-y: hidden;
}

.button-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:#fff;
}

.button-text {
  color: #899DA6;
  font-size: 32rpx;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.scroll-wrapper{
  position: absolute;
  top: 0%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 91%;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  background:rgba(255, 255, 255, 0);
  padding-top: 5%
}

.bottom-wrapper {
  position: relative;
  top: 91%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 9%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:#fff;
  border-top:1px dashed #ddd;
}

.player-wrapper {
  /* display: flex;
  flex-direction: column; */
  width: 70%;
  height: 60rpx;
  align-items:center;
  justify-content: center;
  background:#fff;
  margin-left: 3.5%;
  margin-right: 3.5%;
  margin-top: 1%;
  margin-bottom: 0%;
  border:1px solid rgba(160, 182, 201,0.8);
  border-radius: 5px;
}

.player-bg {
  /* position: relative;
  top: 0rpx; */
  width: 100%;
  height: 100%;
  align-self: flex-start;
  background:rgba(160, 182, 201,0.4);
}

.player-content-wraper {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  position: relative;
  top: -55rpx;
  left: 10%;
  background: rgba(160, 182, 201,0);
}

.player-icon {
  flex-shrink: 0;
  height: 50rpx;
  width: 50rpx;
  background: rgba(160, 182, 201,0);
}

.player-text {
  color: #899DA6;
  font-size: 38rpx;
  flex-shrink: 0;
  margin-left: 25rpx;
  margin-top: 5rpx;
}

