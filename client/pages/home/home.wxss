/* pages/home/home.wxss */
.main-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items:center;
}

.blank-wrapper {
  color: white;
  flex-grow: 1;
  flex-shrink: 1;
  background-color: #fff;
  overflow-y: auto;
  opacity: 0;
}

.bottom-wrapper {
  position: absolute;
  top: 91%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 9%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:#fff;
  border-top:1px dashed #ddd;
}

.button-wrapper {
  display: flex;
  width: 50%;
  height: 100%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:#fff;
}

.button-icon {
  flex-shrink: 0;
  height: 70rpx;
  width: 70rpx;
}

.button-text {
  color: #899DA6;
  font-size: 32rpx;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.poster{
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  width: 70%;
  height: 70%;
}

.image-wrapper {
  width: 100%;
  height: 100%;
  overflow-y: hidden;
}

.comment-meta {
  display: flex;
  margin-top: 15rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.home-movie-image{
  width: 100%;
  height: 100%;
}

.home-movie-name {
  font-size: 40rpx;
  opacity: 0.8;
  margin-top: 30rpx;
  text-align: center;
}

.home-movie-comment {
  display: flex;
  width: 300rpx;
  font-size: 25rpx;
  opacity: 0.8;
  text-align: left;
  padding-left: 12rpx;
}

.user-head {
  flex-shrink: 0;
  height: 75rpx;
  width: 75rpx;
  background: #F5E069;
  border-radius: 50%;
}
