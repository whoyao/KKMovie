/* pages/detail/detail.wxss */
.main-wrapper {
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items:center;
}

.center-wrapper {
  position: absolute;
  left:0px;
  top:0px;
  color: white;
  flex-grow: 0;
  flex-shrink: 0;
  height: 78%;
  width: 90%;
  margin-top: 15%;
  margin-right: 5%;
  margin-left: 5%;
  margin-bottom: 10%;
  border:1px solid rgba(160, 182, 201,0.8);
  background-color: #fff;
  border-radius: 1%;
  opacity: 1;
  display: flex;
  flex-direction: row-reverse;
}

.poster-wrapper {
  position: absolute;
  left:0px;
  top:0px;
  height: 35%;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  background-color:rgba(255,255,255,0);
  overflow-y: hidden
}

.text-wrapper {
  position: absolute;
  left:0%;
  top:35%;
  height: 30%;
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-content: center;
  background-color:rgba(255,255,255,0);
  padding-left: 15%;
  padding-right: 15%;
}

.blank-wrapper {
  color: white;
  flex-grow: 1;
  flex-shrink: 1;
  background-color: #fff;
  overflow-y: auto;
  opacity: 0;
}

.bottom-wrapper {
  position: absolute;
  top:90%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 10%;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  background:rgb(19, 179, 27);
}

.voice-wrapper {
  position: absolute;
  top:65%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 15%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:rgba(255, 255, 255, 0);
}

.button-wrapper {
  display: flex;
  width: 30%;
  height: 40%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:#fff;
  margin-left: 3.5%;
  margin-right: 3.5%;
  margin-top: 25%;
  margin-bottom: 25%;
  border:1px solid rgba(160, 182, 201,0.8);
  border-radius: 5px;
}

.button-icon {
  flex-shrink: 0;
  height: 50rpx;
  width: 50rpx;
}

.bottom-text {
  color: white;
  font-size: 35rpx;
  flex-shrink: 0;
  margin-left: 10rpx;
  opacity: 0.8;
}


.button-text {
  color: #899DA6;
  font-size: 26rpx;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.poster{
  margin-top: 30rpx;
  width: 35%;
}

.comment-meta {
  display: flex;
  margin-top: 15rpx;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.movie-name {
  font-weight: bold;
  font-size: 40rpx;
  opacity: 0.8;
  margin-top: 15rpx;
  text-align: center;
}

.movie-desc {
  font-size: 30rpx;
  opacity: 0.8;
  margin-top: 25rpx;
  text-align: left;
  overflow-y: auto;
}










.product-card {
  display: flex;
  align-items: center;
  padding-left: 26rpx;
  height: 200rpx;
  background: #FFFFFF;
}

.product-image {
  flex-shrink: 0;
  width: 160rpx;
  height: 160rpx;
}

.product-info {
  flex: 1;
  padding: 27rpx;
  height: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
}

.product-name {
  color: rgba(29, 29, 38, 0.8);
}

.product-price {
  margin-top: 12rpx;
  font-weight: bold;
}

.comment-cnt {
  margin: 29rpx 27rpx 0;
  padding-bottom: 26rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 10rpx;
}

.comment-ipt {
  width: 100%;
  height: 85%;
  padding: 29rpx 34rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
}

.comment-placeholder {
  color: rgba(29, 29, 38, 0.4);
}

.preview-cnt {
  display: flex;
  margin-top: 29rpx;
  margin-left: 29rpx;
}

.preview-image {
  margin-right: 10rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 5rpx;
}

.opr-upload {
  display: block;
  margin-top: 29rpx;
  margin-left: 29rpx; 
  width: 43rpx;
  height: 43rpx;
}

.comment-btn {
  margin: 34rpx auto;
  width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #F5E069;
  border-radius: 10rpx;
  font-size: 30rpx;
  color: #34373D;
}

.comment-btn.dis {
  color: rgba(52, 55, 61, 0.5);
}