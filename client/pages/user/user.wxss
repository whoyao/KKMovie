/* pages/user/user.wxss */

.main-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items:center;
}

.bottom-wrapper {
  position: relative;
  top: 91%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 9%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:#fff;
  border-top:1px dashed #ddd;
}

.button-wrapper {
  display: flex;
  width: 45%;
  height: 100%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:#fff;
  border: 1px solid #ddd;
  border-radius: 15rpx;
}

.login-wrapper {
  position: absolute;
  top: 45%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 9%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:rgba(255, 255, 255, 0);
}

.button-icon {
  flex-shrink: 0;
  height: 70rpx;
  width: 70rpx;
}

.button-text {
  color: #899DA6;
  font-size: 32rpx;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.scroll-wrapper{
  position: absolute;
  top: 0%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 91%;
  flex-direction: column;
  justify-content: flex-start;
  align-items:center;
  background:rgba(255, 255, 255, 0);
  overflow-x: auto;
  overflow-y: auto;
}

.top-selecter {
  /* position: absolute;
  top: 0%;
  left: 0%; */
  width: 100%;
  color: #ff7b00;
  margin-top: 10%;
  margin-bottom: 10%;
  font-size: 32rpx;
  text-align: center;
  flex-shrink: 0;
  margin-left: 0%;
  opacity: 0.8
}

.comment-card {
  height: 28%;
  width: 90%;
  margin-top: 2%;
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 2%;
  background-color: #fff;
  display: flex;
  flex-shrink: 0;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  overflow-y: hidden;
}

.comment-meta-wrapper {
  height: 100%;
  width: 80%;
  margin-left: 8%;
  margin-right: 5%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.movie-image {
  height: 100%;
  width: 50%;
}

.movie-name {
  font-weight: bold;
  font-size: 30rpx;
  opacity: 0.8;
  margin-bottom: 5rpx;
  text-align: left;
}

.comment-text {
  font-size: 25rpx;
  opacity: 0.8;
  margin-top: 20rpx;
  text-align: left;
  width: 100%;
  height: 30%;
  overflow-x: hidden;
  overflow-y: hidden;
}

.user-wrapper {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  width: 100%;
  height: 15%;
  box-sizing: border-box;
  align-content: center;
  justify-content: flex-start;
}

.userhead {
  flex-shrink: 0;
  height: 40rpx;
  width: 40rpx;
  background: #F5E069;
  border-radius: 50%;
}

.username {
  color: rgb(0, 71, 112);
  /* margin-top:22rpx; */
  font-size: 28rpx;
  flex-shrink: 0;
  margin-left: 15rpx;
  opacity: 0.8;
}

