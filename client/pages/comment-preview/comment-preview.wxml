<!--pages/comment-preview/comment-preview.wxml-->
<view class='main-wrapper'>
  <view class='center-wrapper'></view>
  <view class='poster-wrapper'>
    <image class='poster' src='{{movieDetail.image}}' mode='widthFix'></image>
  </view>
  <view class='text-wrapper'>
    <view class='movie-name'>{{movieDetail.name}}</view>
    <textarea class='comment-ipt' placeholder-class='comment-placeholder' placeholder='请输入你的影评内容...' auto-focus maxlength='255' bindinput='onInput'></textarea>
  </view>

  <view class='voice-wrapper'>
    <view class='button-wrapper' bindtap="startRecoding">
        <image class='button-icon' src='../../images/voice.png' mode='aspectFill'></image>
        <view class='button-text'>录音</view>
    </view>
  </view>

  <view class='bottom-wrapper'> 
    <view class='bottom-text'>完成</view>
  </view>

</view>