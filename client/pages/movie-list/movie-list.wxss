/* pages/movie-list/movie-list.wxss */
.main-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: column;
  justify-content: flex-start;
  align-items:center;
}

.blank-wrapper {
  color: white;
  flex-grow: 1;
  flex-shrink: 1;
  background-color: #fff;
  overflow-y: auto;
  opacity: 0;
}

.movie-card {
  height: 25%;
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  margin-top: 5%;
  margin-bottom: 5%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  overflow-y: hidden;
}

.movie-text-wrapper {
  height: 100%;
  width: 80%;
  margin-left: 10%;
  margin-right: 10%;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-content: center;
}

.movie-image {
  height: 100%;
  width: 55%;
}

.movie-name {
  font-weight: bold;
  font-size: 30rpx;
  opacity: 0.8;
  margin-bottom: 5rpx;
  text-align: left;
}

.movie-categore {
  font-size: 25rpx;
  opacity: 0.8;
  margin-top: 20rpx;
  text-align: left;
  overflow-y: auto;
}

.button-wrapper {
  display: flex;
  width: 100%;
  height: 100%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:#fff;
}

.button-text {
  color: #899DA6;
  font-size: 32rpx;
  flex-shrink: 0;
  margin-left: 10rpx;
}

.scroll-wrapper{
  position: absolute;
  top: 0%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 91%;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  background:rgba(255, 255, 255, 0);
}

.bottom-wrapper {
  position: relative;
  top: 91%;
  left: 0%;
  display: flex;
  width: 100%;
  height: 9%;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  background:#fff;
  border-top:1px dashed #ddd;
}